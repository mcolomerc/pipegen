#!/bin/bash
# Pre-commit hook to run golangci-lint before commits

set -e

echo "ğŸ” Running golangci-lint..."

# Run golangci-lint
if ! golangci-lint run --timeout=10m; then
    echo "âŒ golangci-lint found issues. Please fix them before committing."
    echo "ğŸ’¡ Run 'golangci-lint run --fix' to auto-fix some issues"
    exit 1
fi

echo "âœ… golangci-lint passed!"

# Run go fmt check
echo "ğŸ” Checking go fmt..."
if [ -n "$(gofmt -l .)" ]; then
    echo "âŒ Code is not formatted. Run 'go fmt ./...' to fix:"
    gofmt -l .
    exit 1
fi

echo "âœ… go fmt check passed!"

# Run go mod tidy check
echo "ğŸ” Checking go mod tidy..."
go mod tidy
if [ -n "$(git diff --name-only)" ]; then
    echo "âŒ go.mod or go.sum is not tidy. Please commit the changes:"
    git diff --name-only
    exit 1
fi

echo "âœ… go mod tidy check passed!"
echo "ğŸ‰ All pre-commit checks passed!"
